@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<h3></h3>
<partial name="_StatusMessage" for="StatusMessage" />
<section class="checkout spad">
<div class="row">
    <div class="container">
    <div class="checkout__form">
        <h4>Thông tin tài khoản</h4>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="checkout__input">
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            </div>
            <div class="checkout__input">
            <div class="form-floating">
                <input asp-for="Input.Name" class="form-control" />
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            </div>
            <div class="checkout__input">
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            </div>
            <div class="checkout__input">
            <div class="form-floating">
                <input asp-for="Input.Address.City" class="form-control" />
                <label asp-for="Input.Address.City" class="form-label"></label>
                <span asp-validation-for="Input.Address.City" class="text-danger"></span>
            </div>
            </div>
            <div class="checkout__input">
            <div class="form-floating">
                <input asp-for="Input.Address.Street" class="form-control" />
                <label asp-for="Input.Address.Street" class="form-label"></label>
                <span asp-validation-for="Input.Address.Street" class="text-danger"></span>
            </div>
            </div>
            <div class="checkout__input">
            <div class="form-floating">
                <input asp-for="Input.Address.ZipCode" class="form-control" />
                <label asp-for="Input.Address.ZipCode" class="form-label"></label>
                <span asp-validation-for="Input.Address.ZipCode" class="text-danger"></span>
            </div>
            </div>
            <div class="checkout__input">
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </div>
        </form>
    </div>
    </div>
</div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}