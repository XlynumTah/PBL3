@model OrderViewModel

@{
    ViewData["Title"] = "Order Detail";
}

<section class="breadcrumb-section set-bg" data-setbg="/img/product/details/iphone13promax/apple-banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>@ViewData["Title"]</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<br />

<div class="container">
    <table class="table">
        <tr>
            <th>
                Sản phẩm
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Giá tiền
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Tổng tiền
            </th>
        </tr>
        @foreach (var orderItem in Model.OrderItems)
        {
            <tr>
                <td>
                    @orderItem.ProductName
                </td>
                <td>
                    <img src="@orderItem.ImageUrl" alt="@orderItem.ImageUrl" />
                </td>
                <td>
                    @orderItem.UnitPrice.ToString("N0")đ
                </td>
                <td>
                    @orderItem.Units
                </td>
                <td>
                    @orderItem.TotalPrice.ToString("N0")đ
                </td>
            </tr>
        }
    </table>
    <h1>Total price: @Model.TotalPrice.ToString("N0")đ</h1>
    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                <h4>Order status</h4>
                <hr />
                <div class="checkout__input">
                    @foreach (var orderStatus in Model.OrderStatuses)
                    {
                        <br />
                        <span>@orderStatus.Name.ToString()</span>
                        <br />
                        <span>Start date: @orderStatus.StartDate</span>
                        <br />
                        @if (@orderStatus.EndDate != null)
                        {
                            <span>End date: @orderStatus.EndDate</span>
                        }
                    }
                </div>
            </div>
        </div>
    </section>

